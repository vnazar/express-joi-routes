{
  "name": "express-joi-routes",
  "version": "1.0.0",
  "description": "Module for Express.js that allows you to standardize your routes and validate their content with Joi.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -fr dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "watch": "tsc --watch",
    "pre:publish": "npm run build",
    "lint": "eslint --fix *",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls"
  },
  "author": "Vicente Nazar",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "express": "^4.16.4",
    "express-joi-validation": "^4.0.3"
  },
  "keywords": [
    "routes",
    "express",
    "joi",
    "validation",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vnazar/express-joi-routes.git"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/hapi__joi": "^16.0.4",
    "@types/jest": "^24.0.25",
    "@types/node": "^8.0.29",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.9",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  }
}
